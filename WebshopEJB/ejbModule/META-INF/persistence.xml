		<class>ch.hslu.edu.enapp.webshop.entity.Product</class>
		<class>ch.hslu.edu.enapp.webshop.entity.Purchase</class>
		<class>ch.hslu.edu.enapp.webshop.entity.Purchaseitem</class>
		<class>ch.hslu.edu.enapp.webshop.entity.Authgroup</class>
		<class>ch.hslu.edu.enapp.webshop.entity.Usergroup</class>
		<class>ch.hslu.edu.enapp.webshop.entity.UsergroupPK</class>
        <properties>
            <property name="openjpa.jdbc.Schema" value="WEBSHOP"/>
        </properties>
	</persistence-unit>
</persistence>
